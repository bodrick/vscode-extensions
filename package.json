{
  "name": "@bodrick/vscode-extensions-monorepo",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "check:format": "prettier --list-different \"./**/*.{ts,js,json,md}\"",
    "check:spelling": "cspell --config=.cspell.json \"**/*.{md,ts,js}\"",
    "clean": "rimraf \"packages/**/{temp,dist}\"",
    "format": "prettier --write \"**/*.{js,json,md,yml,ts}\"",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "postinstall": "node scripts/install-husky.mjs",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm run check:format",
    "preinstall": "node scripts/disallow-npm.js",
    "publish": "node scripts/publish.js",
    "security": "pnpm audit --audit-level=moderate"
  },
  "dependencies": {
    "conventional-commits-parser": "^3.2.4",
    "semver": "^7.3.8",
    "tslib": "^2.4.1",
    "write-pkg": "^5.1.0"
  },
  "devDependencies": {
    "@bodrick/eslint-config": "workspace:*",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/eslint": "^8.4.10",
    "@types/glob": "^8.0.0",
    "@types/micromatch": "^4.0.2",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/rimraf": "^3.0.2",
    "@types/vscode": "^1.74.0",
    "@types/yargs": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vscode/test-electron": "^2.2.1",
    "@vscode/vsce": "^2.16.0",
    "ci-info": "^3.7.0",
    "cosmiconfig": "^8.0.0",
    "cross-env": "^7.0.3",
    "cspell": "^6.18.0",
    "date-fns": "^2.29.3",
    "esbuild": "^0.16.10",
    "eslint": "^8.30.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.5.2",
    "execa": "^6.1.0",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "micromatch": "^4.0.5",
    "minimist": "^1.2.7",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "prettier-plugin-package": "^1.3.0",
    "read-pkg": "^7.1.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yml,yaml,md}": "prettier --write"
  }
}
